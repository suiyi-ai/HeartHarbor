	width: 60rpx;
	text-align: center;
}
.menu-text.data-v-7c2ebfa5 {
	flex: 1;
	font-size: 30rpx;
	color: #2C5F8D;
	font-weight: 500;
}
.menu-badge.data-v-7c2ebfa5 {
	background: linear-gradient(135deg, #FF6B9D 0%, #FF8E9F 100%);
	color: white;
	font-size: 20rpx;
