.menu-arrow.data-v-7c2ebfa5 {
	font-size: 32rpx;
	color: #B0C4DE;
}
.logout-section.data-v-7c2ebfa5 {
	margin-top: 40rpx;
	padding: 0 30rpx;
}
.logout-btn.data-v-7c2ebfa5 {
	width: 100%;
	height: 88rpx;
	background: linear-gradient(135deg, #FF6B9D 0%, #FF8E9F 100%);
	color: white;
	border-radius: 44rpx;
	font-size: 32rpx;
	border: none;
	box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
	transition: transform 0.2s;
