	font-size: 32rpx;
	color: #4A90E2;
	padding: 10rpx;
}
.stats.data-v-7c2ebfa5 {
	display: flex;
	justify-content: space-around;
	background: rgba(255, 255, 255, 0.6);
	border-radius: 16rpx;
	padding: 30rpx 20rpx;
}
.stat-item.data-v-7c2ebfa5 {
	text-align: center;
	flex: 1;
	position: relative;
}
.stat-item.data-v-7c2ebfa5::after {
	content: '';
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	width: 2rpx;
	height: 60rpx;
	background: rgba(74, 144, 226, 0.2);
}
.stat-item.data-v-7c2ebfa5:last-child::after {
	display: none;
}
.stat-number.data-v-7c2ebfa5 {
	display: block;
	font-size: 40rpx;
	font-weight: bold;
	color: #4A90E2;
	margin-bottom: 12rpx;
	transition: transform 0.2s;
}
.stat-item:active .stat-number.data-v-7c2ebfa5 {
	transform: scale(1.1);
}
.stat-label.data-v-7c2ebfa5 {
	display: block;
	font-size: 24rpx;
	color: #7A9BC4;
}
