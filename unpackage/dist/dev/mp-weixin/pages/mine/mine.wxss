	font-size: 56rpx;
	color: #4A90E2;
	font-weight: bold;
}
.user-details.data-v-7c2ebfa5 {
	flex: 1;
}
.username.data-v-7c2ebfa5 {
	display: block;
	font-size: 40rpx;
	font-weight: bold;
	color: #2C5F8D;
	margin-bottom: 12rpx;
}
.user-desc.data-v-7c2ebfa5 {
	display: block;
	font-size: 26rpx;
	color: #5A7FA3;
	margin-bottom: 8rpx;
}
.user-email.data-v-7c2ebfa5 {
	display: block;
	font-size: 24rpx;
	color: #7A9BC4;
}
