
.home-page.data-v-1cf27b2a {
	min-height: 100vh;
	background: linear-gradient(135deg, #E6F3FF 0%, #F5F9FF 100%);
	padding: 20rpx;
}

/* 顶部Banner */
.banner.data-v-1cf27b2a {
	background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%);
	border-radius: 20rpx;
	padding: 40rpx 30rpx;
	color: white;
	margin-bottom: 30rpx;
	box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}
.welcome-section.data-v-1cf27b2a {
	margin-bottom: 20rpx;
}
.greeting.data-v-1cf27b2a {
	display: block;
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}
.sub-greeting.data-v-1cf27b2a {
	display: block;
	font-size: 28rpx;
	opacity: 0.9;
}
.user-status.data-v-1cf27b2a {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.status-text.data-v-1cf27b2a {
	font-size: 26rpx;
}
.status-badge.data-v-1cf27b2a {
	background: rgba(255, 255, 255, 0.2);
	padding: 8rpx 20rpx;
	border-radius: 20rpx;
	font-size: 24rpx;
}

/* 小程序功能介绍 */
.feature-intro.data-v-1cf27b2a {
	background: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.1);
}
.section-title.data-v-1cf27b2a {
	display: block;
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 30rpx;
}
.feature-grid.data-v-1cf27b2a {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: 20rpx;
}
.feature-item.data-v-1cf27b2a {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 25rpx 20rpx;
	background: #F8F9FA;
	border-radius: 15rpx;
	transition: all 0.3s;
}
.feature-item.data-v-1cf27b2a:hover {
	background: #E6F3FF;
	transform: translateY(-2rpx);
}
.feature-icon.data-v-1cf27b2a {
	font-size: 50rpx;
	margin-bottom: 15rpx;
}
.feature-title.data-v-1cf27b2a {
	font-size: 28rpx;
	font-weight: bold;
	color: #1890FF;
	margin-bottom: 10rpx;
	text-align: center;
}
.feature-desc.data-v-1cf27b2a {
	font-size: 22rpx;
	color: #666;
	text-align: center;
	line-height: 1.4;
}

