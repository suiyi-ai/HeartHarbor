	display: flex;
	justify-content: space-between;
	margin-bottom: 30rpx;
}
.mood-item.data-v-1cf27b2a {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx;
	border-radius: 15rpx;
	background: #F8F9FA;
	transition: all 0.3s;
}
.mood-item.active.data-v-1cf27b2a {
	background: #E6F3FF;
	border: 2rpx solid #1890FF;
}
.mood-emoji.data-v-1cf27b2a {
	font-size: 40rpx;
	margin-bottom: 10rpx;
}
.mood-text.data-v-1cf27b2a {
	font-size: 24rpx;
	color: #666;
}
.mood-input.data-v-1cf27b2a {
	display: flex;
	gap: 20rpx;
}
.input.data-v-1cf27b2a {
	flex: 1;
	height: 80rpx;
	background: #F8F9FA;
	border: 2rpx solid #E6F3FF;
	border-radius: 40rpx;
	padding: 0 30rpx;
	font-size: 28rpx;
}
.save-btn.data-v-1cf27b2a {
	width: 120rpx;
	height: 80rpx;
	background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%);
	color: white;
	border-radius: 40rpx;
	font-size: 28rpx;
	border: none;
}

