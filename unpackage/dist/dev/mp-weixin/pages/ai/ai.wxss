	width: 100%;
	height: 90rpx;
	background: #F8F9FA;
	border: 2rpx solid #E6F3FF;
	border-radius: 20rpx;
	padding: 0 30rpx;
	font-size: 30rpx;
	margin-bottom: 35rpx;
	transition: all 0.3s ease;
}
.title-input.data-v-fdb58938:focus {
	border-color: #1890FF;
	box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.1);
}
.modal-actions.data-v-fdb58938 {
	display: flex;
	gap: 25rpx;
	justify-content: center;
}
.btn-cancel.data-v-fdb58938, .btn-confirm.data-v-fdb58938 {
	padding: 25rpx 45rpx;
	border-radius: 20rpx;
	font-size: 30rpx;
	font-weight: 600;
	border: none;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	min-width: 120rpx;
}
.btn-cancel.data-v-fdb58938 {
	background: #F8F9FA;
	color: #666;
	box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}
.btn-cancel.data-v-fdb58938:active {
	background: #E6F3FF;
	transform: scale(0.95);
}
.btn-confirm.data-v-fdb58938 {
	background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%);
	color: white;
	box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
}
.btn-confirm.data-v-fdb58938:active {
	transform: scale(0.95);
	box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.4);
}

/* 加载动画样式 - 优化后 */
.loading-dots.data-v-fdb58938 {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 10rpx;
	padding: 20rpx;
}
.dot.data-v-fdb58938 {
	font-size: 45rpx;
	color: #1890FF;
	animation: dot-bounce-fdb58938 1.4s infinite ease-in-out both;
	filter: drop-shadow(0 2rpx 4rpx rgba(24, 144, 255, 0.3));
}
.dot.data-v-fdb58938:nth-child(1) {
	animation-delay: -0.32s;
}
.dot.data-v-fdb58938:nth-child(2) {
	animation-delay: -0.16s;
}
@keyframes dot-bounce-fdb58938 {
0%, 80%, 100% {
		transform: scale(0.5);
		opacity: 0.5;
}
40% {
		transform: scale(1.2);
		opacity: 1;
}
}

